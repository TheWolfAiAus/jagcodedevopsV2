{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/main.tsx", "src/App.tsx", "vite-env.d.ts"],
  "exclude": [
    "node_modules", 
    "dist", 
    "app", 
    "backend", 
    "crypto-tracker", 
    "frontend", 
    "functions", 
    "android",
    "src/app",
    "src/Services", 
    "src/routes", 
    "src/middleware", 
    "src/config", 
    "src/pages", 
    "src/once-ui", 
    "src/components", 
    "src/tokens", 
    "src/wolf", 
    "src/lib", 
    "src/hooks",
    "src/assets",
    "**/*.ios.*",
    "**/*.android.*",
    "**/*.native.*"
  ]
}
