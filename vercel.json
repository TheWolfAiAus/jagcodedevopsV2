{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "outputDirectory": ".next"
      }
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "APPWRITE_ENDPOINT": "https://syd.cloud.appwrite.io/v1",
    "APPWRITE_PROJECT_ID": "68a36f6c002bfc1e6057",
    "APPWRITE_DATABASE_ID": "68a3b34a00375e270b14",
    "NEXT_PUBLIC_APPWRITE_ENDPOINT": "https://syd.cloud.appwrite.io/v1",
    "NEXT_PUBLIC_APPWRITE_PROJECT_ID": "68a36f6c002bfc1e6057",
    "NEXT_PUBLIC_APP_NAME": "JagCodeDevOps",
    "NEXT_PUBLIC_APP_VERSION": "1.0.0"
  },
  "functions": {
    "backend/dist/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/dist/index.js"
    }
  ]
}