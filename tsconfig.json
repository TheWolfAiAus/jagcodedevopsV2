{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "app", "backend", "crypto-tracker", "src/tokens", "src/wolf", "src/lib/appwrite.ts", "src/Services", "src/routes", "src/middleware", "src/config", "src/pages", "src/once-ui", "src/components/ui/IconSymbol.tsx", "src/components/ui/TabBarBackground.ios.tsx", "src/hooks/useColorScheme.ts", "src/hooks/useColorScheme.web.ts"]
}
